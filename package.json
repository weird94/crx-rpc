{
  "name": "crx-rpc",
  "version": "2.3.0",
  "description": "A lightweight RPC framework for Chrome Extension (background <-> content <-> web)",
  "repository": {
    "type": "git",
    "url": "https://github.com/weird94/crx-rpc"
  },
  "author": "weird94",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "rpc",
    "content-script",
    "background",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./playwright": {
      "types": "./dist/playwright.d.ts",
      "default": "./dist/playwright.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "test:playwright": "playwright test",
    "postinstall": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/chrome": "^0.0.270",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
